<div class="form">
  <div class="form-container">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :nickname,
                    required: true,
                    input_html: { autocomplete: "nickname", class: "form-input-style"  }%>
        <%= f.input :first_name,
                    required: true,
                    input_html: { autocomplete: "first_name", class: "form-input-style"  }%>
        <%= f.input :last_name,
                    required: true,
                    input_html: { autocomplete: "last_name", class: "form-input-style"  }%>
        <%= f.input :location,
                    required: true,
                    input_html: { autocomplete: "location", class: "form-input-style"  }%>
        <%= f.input :date_of_birth,
                    start_year: Date.today.year - 100,
                    end_year: Date.today.year,
                    required: true,
                    input_html: { autocomplete: "date_of_birth", class: "form-input-style"  }%>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email", class: "form-input-style"  }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-input-style"  } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-input-style"  } %>
      </div>

      <div class="button", style="margin-top: 30px; margin-bottom:20px">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
