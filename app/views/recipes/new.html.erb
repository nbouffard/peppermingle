<div class="form">
  <div class="form-container">
    <h1>Create New Recipe</h1>

      <%= simple_form_for @recipe do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :ingredients %>
        <%= f.input :category %>
        <%= f.input :cuisine %>
        <%= f.input :prep_time %>
        <%= f.input :total_time %>
        <%= f.input :difficulty %>
        <%= f.input :servings %>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
  </div>
</div>
