<div class="recipe-page">
  <div class="recipe-container">
    <div class="recipe-column-left">
      <div class="container">
        <div class="back-button">
          <%= link_to "Back", :back, class: "button small-button" %>
        </div>
        <h1><%= @recipe.title %></h1>
        <%= image_tag("https://images.unsplash.com/photo-1564355808539-22fda35bed7e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2047&q=80", alt: "Recipe Photo", class: "recipe-img") %>
        <p><%= @recipe.description %></p>

        <%= render partial: 'shared/recipe_card' %>
      </div>
    </div>
    <hr class="recipe-separator">
    <div class="recipe-column-right">
      <div class="container">
        <div class="signup-button">
          <button class="button">Sign Up for Event</button>
        </div>

        <div class="user-info">
          <div class="user-avatar"></div>
          <p class="username">Maggie131</p>
        </div>

        <div class="other-recipes">
          <div class="card">
            <a href=""></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
