<div class="container">

 <%= form_tag recipes_path, method: :get do %>
  <div class="season">
    <h4>Season</h4>
    <%= check_box_tag(:query, :autumn) %>
    <%= label_tag(:query, 'Autumn') %>
    <%= check_box_tag(:query, :winter) %>
    <%= label_tag(:season, 'Winter') %>
    <%= check_box_tag(:query, :spring) %>
    <%= label_tag(:season, 'Spring') %>
    <%= check_box_tag(:query, :summer) %>
    <%= label_tag(:season, 'Summer') %>
    <%= check_box_tag(:query, :christmas) %>
    <%= label_tag(:season, 'Christmas') %>
  </div>
  <hr>
  <div class="meal_type">
    <h4>Meal type</h4>
    <%= check_box_tag(:query, :breakfast) %>
    <%= label_tag(:meal_type, 'Breakfast') %>
    <%= check_box_tag(:query, :lunch) %>
    <%= label_tag(:meal_type, 'Lunch') %>
    <%= check_box_tag(:query, :dinner) %>
    <%= label_tag(:meal_type, 'Dinner') %>
    <%= check_box_tag(:query, :snack) %>
    <%= label_tag(:meal_type, 'Snack') %>
    <%= check_box_tag(:query, :appetizers) %>
    <%= label_tag(:meal_type, 'Appetizers') %>
  </div>
  <hr>
  <div class="dietary_restrictions">
    <h4>Meal type</h4>
    <%= check_box_tag(:query, :vegan) %>
    <%= label_tag(:dietary_restrictions, 'Vegan') %>
    <%= check_box_tag(:query, :dairy_free) %>
    <%= label_tag(:dietary_restrictions, 'Dairy free') %>
    <%= check_box_tag(:query, :gluten_free) %>
    <%= label_tag(:dietary_restrictions, 'Gluten free') %>
    <%= check_box_tag(:query, :nut_free) %>
    <%= label_tag(:dietary_restrictions, 'Nut free') %>
    <%= check_box_tag(:query, :vegetarian) %>
    <%= label_tag(:dietary_restrictions, 'Vegetarian') %>
    <%= check_box_tag(:query, :pescatarian) %>
    <%= label_tag(:dietary_restrictions, 'Pescatarian') %>
  </div>
  <hr>
  <%= submit_tag('filter') %>
  <hr>
<% end %>
  <% if @recipes.empty? %>
    <h1>Recipes</h1>
    <hr>
    <p>No recipes yet...</p>
  <% else %>
    <% @recipes.each do |recipe| %>
    <a href="#">
  <div class="small-card">
    <%= image_tag("https://images.unsplash.com/photo-1518779578993-ec3579fee39f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1935&q=80", alt: "Recipe Photo", class: "card-img-background") %>
    <div class="small-card-content">
      <h2><mark><%= recipe.title %></mark></h2>
      <p><mark>Servings: <%= recipe.servings %></mark></p>
      <p><mark>Creator: <%= recipe.user.nickname %></mark></p>
    </div>
    <div class="small-card-info">
      <ul class="small-card-icons">
        <li><p><mark><i class="fa-sharp fa-regular fa-clock" style="color: #075d5e;"></i><%= recipe.total_time %> mins</p></mark></li>
        <li><p><mark><i class="fa-regular fa-thumbs-up" style="color: #075d5e;"></i><%= recipe.difficulty %></p></mark></li>
    </div>
  </div>
</a>
    <% end %>
  <% end %>
</div>
