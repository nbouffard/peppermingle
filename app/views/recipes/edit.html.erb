<div class="container">
  <h1>Edit Recipe</h1>

  <%= simple_form_for @recipe do |form| %>
    <%= form.input :title %>
    <%= form.input :description, as: :text %>
    <%= form.input :ingredients, as: :text %>
    <%= form.input :category %>
    <%= form.input :cuisine %>
    <%= form.input :prep_time %>
    <%= form.input :total_time %>
    <%= form.input :servings %>
    <%= form.input :difficulty %>
    <%= form.input :directions %>

    <div class="field">
      <%= form.label :photo %>
      <%= form.file_field :photo %>
    </div>

    <div class="actions">
      <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
        Update Recipe
      <% end %>
    </div>
  <% end %>

  <% if current_user == @recipe.user %>
    <div class="text-right mt-3">
      <%= link_to "Cancel", recipe_path(@recipe), class: 'btn btn-secondary mr-2' %>
      <%= button_to "Delete Recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger", form: { action: recipe_path(@recipe), method: :delete } %>
    </div>
  <% end %>
</div>
