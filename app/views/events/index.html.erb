<div class="container">
  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-10">
      <div class="card-grid">
        <% @events.each do |event| %>
          <div class="card-trip">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
            <div class="card-trip-infos">
              <div>
                  <h2 class="mb-1"><%= link_to event.title, event_path(event) %></h2>
                  <p><i class="fa-sharp fa-solid fa-calendar-days" style="color: #fd2008;"></i> <%= event.date.strftime('%d %B %Y') %></p>
                  <p><i class="fa-sharp fa-solid fa-thumbtack" style="color: #f71b02;"></i> Recipe: <%= event.recipe.title%></p>
              </div>
              <%= link_to "Sign up", "#", class: "button card-button"; %>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
